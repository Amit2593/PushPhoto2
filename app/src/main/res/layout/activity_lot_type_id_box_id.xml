<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lattoo.pushphoto.LotTypeIdBoxIdActivity">

    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="72dp"
        android:layout_marginLeft="8dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/lottype_Fuji"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:onClick="selectLotType"
            android:text="Fuji"
            android:textColor="#1279d1"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/lottype_Gala"
            android:layout_width="140dp"
            android:layout_height="50dp"
            android:onClick="selectLotType"
            android:text="Gala"
            android:textColor="#1279d1"
            android:textSize="25sp" />

        <RadioButton
            android:id="@+id/lottype_Reddelicious"
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:onClick="selectLotType"
            android:text="Red Delicious"
            android:textColor="#1279d1"
            android:textSize="25sp" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="139dp"
        android:layout_marginTop="33dp"
        android:text="Select Type"
        android:textColor="#ec3e04"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/enterBoxName"
        android:layout_width="145dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textCapCharacters"
        android:hint="Enter Box Name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/purchaseDate"
        android:layout_width="133dp"
        android:layout_height="33dp"
        android:layout_marginRight="82dp"
        android:layout_marginTop="327dp"
        android:clickable="true"
        android:ems="10"
        android:inputType="date"
        android:hint="DD-MM-YYYY"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/press_submit"
        android:layout_width="190dp"
        android:layout_height="46dp"
        android:layout_marginLeft="97dp"
        android:layout_marginTop="433dp"
        android:text="Submit"
        android:onClick="submitLotTypeIdBoxId"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button6"
        android:layout_width="61dp"
        android:layout_height="38dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="322dp"
        android:onClick="setDate"
        android:text="Set"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.957" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="137dp"
        android:layout_height="22dp"
        android:layout_marginLeft="169dp"
        android:layout_marginTop="360dp"
        android:text="(Date of Purchase)"
        android:textColor="#56648c"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lattoo.pushphoto.reddeliciousFeatureSelectionActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="140dp"
            android:layout_height="160dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="324dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintHorizontal_bias="0.007">

            <RadioButton
                android:id="@+id/color_premium"
                android:layout_width="110dp"
                android:layout_height="32dp"
                android:onClick="selectColor"
                android:text="PREMIUM" />

            <RadioButton
                android:id="@+id/color_exfancy"
                android:layout_width="140dp"
                android:layout_height="32dp"
                android:onClick="selectColor"
                android:text="EXTRA FANCY" />

            <RadioButton
                android:id="@+id/color_fancy"
                android:layout_width="110dp"
                android:layout_height="32dp"
                android:onClick="selectColor"
                android:text="FANCY" />


            <RadioButton
                android:id="@+id/color_half"
                android:layout_width="110dp"
                android:layout_height="32dp"
                android:onClick="selectColor"
                android:text="HALF" />

            <RadioButton
                android:id="@+id/color_brown"
                android:layout_width="110dp"
                android:layout_height="32dp"
                android:onClick="selectColor"
                android:text="BROWN" />

        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="330dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="521dp">

            <RadioButton
                android:id="@+id/pressure_good"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectPressure"
                android:text="GOOD" />

            <RadioButton
                android:id="@+id/pressure_medium"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectPressure"
                android:text="MEDIUM" />

            <RadioButton
                android:id="@+id/pressure_average"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectPressure"
                android:text="AVERAGE" />
        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="360dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="599dp">

            <RadioButton
                android:id="@+id/touches_dent"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="selectTouches"
                android:text="DENT" />

            <RadioButton
                android:id="@+id/touches_medium"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectTouches"
                android:text="MEDIUM"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />

            <RadioButton
                android:id="@+id/touches_small"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="selectTouches"
                android:text="SMALL" />

            <RadioButton
                android:id="@+id/touches_na"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:onClick="selectTouches"
                android:text="NA" />

        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="360dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="676dp">

            <RadioButton
                android:id="@+id/topdamage_high"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:onClick="selectTopDamage"
                android:text="HIGH" />

            <RadioButton
                android:id="@+id/topdamage_medium"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:onClick="selectTopDamage"
                android:text="MEDIUM" />

            <RadioButton
                android:id="@+id/topdamage_low"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:onClick="selectTopDamage"
                android:text="LOW" />

            <RadioButton
                android:id="@+id/topdamage_na"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:onClick="selectTopDamage"
                android:text="NA" />
        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="360dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="755dp">

            <RadioButton
                android:id="@+id/bottomtouches_large"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="selectBottomTouches"
                android:text="LARGE" />

            <RadioButton
                android:id="@+id/bottomtouches_medium"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectBottomTouches"
                android:text="MEDIUM" />

            <RadioButton
                android:id="@+id/bottomtouches_small"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="selectBottomTouches"
                android:text="SMALL" />

            <RadioButton
                android:id="@+id/bottomtouches_na"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:onClick="selectBottomTouches"
                android:text="NA" />

        </RadioGroup>

        <ImageView
            android:id="@+id/image_from_url"
            android:layout_width="197dp"
            android:layout_height="180dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginLeft="94dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="94dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="85dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="249dp"
            android:layout_height="33dp"
            android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="16dp"
            android:text="Add Features"
            android:textAlignment="center"
            android:textColor="#ec3e04"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/image_from_url"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.383" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="78dp"
            android:layout_height="33dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="289dp"
            android:text="Color"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="216dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="485dp"
            android:text="Pressure"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="216dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="563dp"
            android:text="Defect-Touches"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="216dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="641dp"
            android:text="Defect-Top Damage"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="260dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="719dp"
            android:text="Defect-Bottom Touches"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="865dp"
            android:text="Save and Continue"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:onClick="saveFeatures"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </android.support.constraint.ConstraintLayout>
</ScrollView>
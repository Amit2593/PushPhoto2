<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lattoo.pushphoto.fujiFeatureSelectionActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="360dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="322dp">

            <RadioButton
                android:id="@+id/color_full"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectColor"
                android:text="FULL" />

            <RadioButton
                android:id="@+id/color_medium"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:onClick="selectColor"
                android:text="MEDIUM"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />

            <RadioButton
                android:id="@+id/color_average"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectColor"
                android:text="AVERAGE" />

        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="330dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.045"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="400dp">

            <RadioButton
                android:id="@+id/shape_good"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectShape"
                android:text="GOOD" />

            <RadioButton
                android:id="@+id/shape_medium"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectShape"
                android:text="MEDIUM" />
            <RadioButton
                android:id="@+id/shape_average"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectShape"
                android:text="AVERAGE" />
        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="360dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="478dp">

            <RadioButton
                android:id="@+id/touches_dent"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="selectTouches"
                android:text="DENT" />

            <RadioButton
                android:id="@+id/touches_medium"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                android:onClick="selectTouches"
                android:text="MEDIUM"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />

            <RadioButton
                android:id="@+id/touches_small"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:onClick="selectTouches"
                android:text="SMALL" />

            <RadioButton
                android:id="@+id/touches_na"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:onClick="selectTouches"
                android:text="NA" />

        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="360dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.027"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="555dp">

            <RadioButton
                android:id="@+id/spotmarks_yes"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:onClick="selectSpotmarks"
                android:text="YES" />

            <RadioButton
                android:id="@+id/spotmarks_no"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:onClick="selectSpotmarks"
                android:text="NO" />

            <RadioButton
                android:id="@+id/spotmarks_na"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:onClick="selectSpotmarks"
                android:text="NA" />
        </RadioGroup>

        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="360dp"
            android:layout_height="39dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="634dp">

            <RadioButton
                android:id="@+id/rusting_high"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:onClick="selectRusting"
                android:text="HIGH" />

            <RadioButton
                android:id="@+id/rusting_medium"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:onClick="selectRusting"
                android:text="MEDIUM"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="40dp" />

            <RadioButton
                android:id="@+id/rusting_low"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:onClick="selectRusting"
                android:text="LOW" />

            <RadioButton
                android:id="@+id/rusting_na"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:onClick="selectRusting"
                android:text="NA" />

        </RadioGroup>

        <ImageView
            android:id="@+id/image_from_url"
            android:layout_width="197dp"
            android:layout_height="180dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_marginLeft="94dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="94dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="85dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="249dp"
            android:layout_height="33dp"
            android:layout_marginLeft="68dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="16dp"
            android:text="Add Features"
            android:textAlignment="center"
            android:textColor="#ec3e04"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/image_from_url"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.383" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="78dp"
            android:layout_height="33dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="289dp"
            android:text="Color"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="216dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="364dp"
            android:text="Shape"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="216dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="442dp"
            android:text="Defect-Touches"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="216dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="520dp"
            android:text="Defect-SpotMarks"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="216dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="598dp"
            android:text="Defect-Rusting"
            android:textColor="#1279d1"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="724dp"
            android:text="Save and Continue"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:onClick="saveFeatures"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </android.support.constraint.ConstraintLayout>
</ScrollView>